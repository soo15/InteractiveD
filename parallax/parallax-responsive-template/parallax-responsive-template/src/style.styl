*
  font-family "Raleway", sans-serif
  font-size 16px
  &::selection
    background #aeaeae
    
html,body
  height 100%

/* utils */
.text
  &.small
    font-size 0.8em
  &.center
    text-align center
  &.right
    text-align right
  &.left
    text-align left
  &.muted
    color #777
  
.parallax
  background-image url("http://st3.flashrolls.net/wallpaper/2e8/21ec64c9b9441794e0e495f2c4750379.jpg")
  
  .nav
    position absolute
    z-index 999
    padding 20px 0
    top 0
    left 0
    right 0
    text-align center
    &:before
      position absolute
      content ""
      top -3px
      left -10px
      right -10px
      width 150%
      box-shadow 0 10px 60px 20px rgba(black, 0.5)
    ul
      margin 0
      list-style none
      li
        margin 0 20px
        display inline-block
        &.active
          a
            border-bottom-color rgba(white, 0.5)
        a
          text-align center
          padding 10px 0
          display block
          color #FFF
          text-decoration none
          border-bottom 2px solid transparent
          transition all 0.2s ease
          &:hover
            border-bottom-color rgba(white, 0.3)
  h1
    text-transform uppercase
    font-weight bold
    font-size 7em
    margin 0
    opacity 0.9
  h3
    font-weight lighter
    margin 0
    font-size 1.5em
    opacity 0.8
  .go.down
    position absolute
    bottom 0
    left 0
    right 0
    height 23%
    &:hover
      cursor pointer
      .arrow
        border-top-color rgba(white, 1)
    .arrow
      transition all 0.4s ease
      position absolute
      left 0
      right 0
      bottom 20px
      margin auto
      width 0
      height 0
      border 15px solid transparent
      border-top-color rgba(white, 0.4)
      
.page
  width 100%
  min-height 100%
  height 100%
  position relative
  display table
  
  .inner
    display table-cell
    vertical-align middle
  
  p
    font-size 18px
  strong
    text-transform uppercase
    font-weight 800
    font-size 1.15em
    border-bottom 1.3em
  a
    text-decoration none
    color lightgray
    border-bottom 1px dotted lightgray
    &:hover
      color white
      border-bottom-color white
    
  &.with.background
    background-size cover
    background-color #111
    &.fixed
      background-attachment fixed
    &.white
      background-color white
      .inner
        color inherit
        background-color transparent
    .inner
      color rgba(white, 0.9)
      background-color rgba(black, 0.6)

.howtofly
  // background-image url('https://static.tumblr.com/8c9ada2e2e5f3f5963b6c993705e0591/sn1gqcl/b9On1j2fg/tumblr_static_holiiiiiiiii.jpg')
  background-image url('https://static.tumblr.com/7522c87788d764dfd98fb0acd965db67/ext2nqx/dIjmywh9p/tumblr_static_flying_birds_png_by_evelivesey-d5yqxwy.png')
  overflow hidden
  box-shadow 0 20px 100px 10px black
  .container
    padding-top 100px
  p
    color rgba(#3e3e3e, 0.8)
  .inner
    background-color rgba(white, 0.9)!important
    width 100%
    height 100%
    top 0
    left 0
    position absolute
  .quote
    position absolute
    bottom 40px
    color transparent
    color #aaa
    right 30px
  &.ready
    .quote
      opacity 0
      transition all 2s ease
      transition-delay 1s
  &.seen
    .quote
      opacity 0.8

.about
  background-image url('https://static.tumblr.com/kn9uct4/cjEm067hu/img_0152.jpg')
  .inner
    background rgba(black, 0.7)!important
  &.ready
    .inner
      background rgba(black, 0.2)!important
      transition background 1s ease
  &.focused
    .inner
      background rgba(black, 0.7)!important
    
    
    